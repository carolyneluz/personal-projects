<h1>Criar Conta de Dono de Restaurante</h1>

<%= form_with model: @restaurant_owner, url: restaurant_owners_path do |form| %>
  <div>
    <%= form.label :cpf %>
    <%= form.text_field :cpf %>
  </div>
  <div>
    <%= form.label :name, "Nome" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :surname, "Sobrenome" %>
    <%= form.text_field :surname %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password, "Senha" %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Criar Conta" %>
  </div>
<% end %>
